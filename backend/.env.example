# ============================================
# Configuração Backend - CEU Tres Pontes
# Copie este arquivo para .env e ajuste os valores
# ============================================

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=ceu_tres_pontes
DB_PASSWORD=seu_password_aqui
DB_NAME=ceu_tres_pontes_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# MQTT Configuration (Herdado da Fase 2)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=ceu_tres_pontes
MQTT_PASSWORD=secure_password
MQTT_BASE_TOPIC=ceu/tres_pontes

# Gateway Configuration
GATEWAY_ID=gateway_001

# API Configuration
API_PREFIX=/api/v1
API_TITLE=CEU Tres Pontes API
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Cache (Opcional - Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# RabbitMQ (Opcional - Fase 3 avançado)
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USER=guest
# RABBITMQ_PASSWORD=guest
